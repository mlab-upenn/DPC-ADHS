    \else
        \expandafter\null
    \fi
    \bgroup
        \setbox\z@\lastbox
        \ifdim\wd\z@>\z@
            \box\z@
        \else
            \aftergroup\unskip@three@kern@penalty
        \fi
    \egroup
    }
